<%- include('partials/_head.ejs') %>
<header>
    <div class="theme">
        <svg class="theme__icon theme__icon--dark">
            <use href="/src/img/sprite.svg#icon-dark"></use>
        </svg>
        <svg class="theme__icon theme__icon--light">
            <use href="/src/img/sprite.svg#icon-light"></use>
        </svg>
    </div>
</header>
<main class="main">
    <section class="form-cover section-light">
        <div class="cover">
            <img
                    src="/src/img/address.svg"
                    alt="RecyClean Add Address"
                    class="cover__img"
            />
        </div>
    </section>
    <section class="form-container section-dark">
        <form class="form form--add-address" data-address="<%= address.id %>" data-user="<%= user.role %>"
              id="editAddressForm">
            <h2 class="form__heading">Edit Address</h2>
            <div class="form__field">
                <input
                        name="city"
                        type="text"
                        class="form__input"
                        placeholder="City"
                        value="<%= address.city[0].toUpperCase() + address.city.slice(1) %>"
                        required
                />
            </div>
            <div class="form__field">
                <input
                        name="street"
                        type="text"
                        class="form__input"
                        placeholder="Street"
                        value="<%= address.street[0].toUpperCase() + address.street.slice(1) %>"
                        required
                />
            </div>
            <div class="form__field">
                <input
                        name="plaque"
                        type="text"
                        class="form__input"
                        placeholder="Plaque"
                        value="<%= address.plaque[0].toUpperCase() + address.plaque.slice(1) %>"
                        required
                />
            </div>
            <div class="form__field">
                <button class="form__btn btn btn--primary" type="submit">
                    Edit
                </button>
            </div>
        </form>
    </section>
</main>
<%- include('partials/_end.ejs') %>